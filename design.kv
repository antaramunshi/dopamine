<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text: "User Login"
            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols:2
            Button:
                text:"Forgot Password"
            Button:
                text: "Sign In"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols:1
        Label:
            text: "Username"
        TextInput:
            hint_text: "username"
        Label:
            text:"Password"
        TextInput: 
            hint_text: "Password"
        Button:
            text: "Submit"
            
        
<RootWidget>:

    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "signup_screen"
                
                
            
                
              